<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseDarkTheme" parent="Theme.AppCompat.Light" >


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseDarkTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>
        <item name="android:absListViewStyle">@style/ListViewStyle.Light</item>
    </style>


    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="android:divider">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">@drawable/listview_selector</item>
    </style>

    <style name="MainTheme" parent="android:style/Theme.Holo.Light.NoActionBar.Fullscreen">

        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>
    </style>

</resources>
