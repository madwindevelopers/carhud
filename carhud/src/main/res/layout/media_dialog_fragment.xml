<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_controls_dialog"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    style="?android:attr/buttonBarStyle">

    <Button
        android:id="@+id/app_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="@string/apps_caps"
        android:textColor="@color/PrimaryTextGrey"
        style="?android:attr/buttonBarButtonStyle"
        />
    <Button
        android:id="@+id/media_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_media_previous"
        android:onClick="onClick"
        style="?android:attr/buttonBarButtonStyle"
        />
    <Button
        android:id="@+id/media_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_media_pause"
        android:onClick="onClick"
        style="?android:attr/buttonBarButtonStyle"
        />
    <Button
        android:id="@+id/media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_media_play"
        android:onClick="onClick"
        style="?android:attr/buttonBarButtonStyle"
        />
    <Button
        android:id="@+id/media_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_media_next"
        android:onClick="onClick"
        style="?android:attr/buttonBarButtonStyle"
        />

</LinearLayout>