<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:animateLayoutChanges="true"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    android:elevation="100dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="16sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/notification_app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/application_icon"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:onClick="onClick"
                />

            <TextView
                android:id="@+id/nt_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/PrimaryTextGrey"
                android:textSize="16sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/nt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_notification"
            android:textColor="@color/PrimaryTextGrey"
            android:textSize="16sp"
            android:layout_marginStart="58dp"
            />

        <TextView
            android:id="@+id/nt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/SecondaryTextGrey"
            android:textSize="16sp"
            android:layout_marginStart="58dp"
            />

        <TextView
            android:id="@+id/nt_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/SecondaryTextGrey"
            android:textSize="16sp"
            android:layout_marginStart="58dp"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>