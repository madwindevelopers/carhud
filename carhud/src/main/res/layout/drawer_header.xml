<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >

    <RelativeLayout
        android:layout_width="@dimen/drawer_width" android:layout_height="160dp"
        android:background="@drawable/nav_drawer_header_280px">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_launcher_new"
            android:layout_centerVertical="true"
            android:id="@+id/imageView2"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#FFF"
            android:text="@string/carhud"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:layout_marginStart="100dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/drawer_width"
        android:layout_height="16dp"
        android:background="@drawable/nav_drawer_header_shadow" />
</LinearLayout>
